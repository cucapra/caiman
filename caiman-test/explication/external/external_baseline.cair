version 0.0.1

types [
    i64,
    slot $slot0 {
        type : i64,
        stage : ready,
        place : local,
    },
    event $event0 {
        place : local
    },
]

external_cpu @op(i64) -> i64;

value @foo() -> i64 {
    %x = constant 2i64;
    %y_t = call @op(%x);
    %y = extract %y_t 0;
    return %y;
}

schedule @bar() -> [%out : $slot0] {
    // note that the test requires this pattern of allocation
    // gives some insight into what we expect to have happen
    %xloc = alloc-temporary-local-i64 @foo.%x;
    %_ = encode-do-local @foo.%x() -> %xloc;
    %yloc = alloc-temporary-local-i64 @foo.%y;
    %_ = encode-do-local @foo.%y_t(%xloc) -> %yloc;
    return %yloc;
}

timeline @time(%e : $event0) -> $event0 {
    return %e;
}

extras {
    @bar {
        value : @foo,
        input_slots : {},
        output_slots : {
            %out : slot_info()
        },
        input_fences : {},
        output_fences : {},
        input_buffers : {},
        output_buffers : {},
        in_timeline_tag : timeline_tag input @time.%e,
        out_timeline_tag : timeline_tag input @time.%e,
    },
}

pipeline "main" = @bar;