version 0.0.1

types [
    i64,
    slot $slot0 {
        type : i64,
        stage : ready,
        place : local,
    },
    event $event0 {
        place : local
    },
]

external_cpu i64 @op(i64);

value i64 @foo(%0 : i64) {
    %z = extract %y 0;
    %y = call @op(%x);
    %x = constant 2i64;
    return %z;
}

schedule $slot0 @bar(%blob : $slot0) {
    %0 = alloc-temporary-local-i64 @foo.%x;
    %1 = encode-do-local @foo.%x() -> %0;
    %2 = alloc-temporary-local-i64 @foo.%z;
    %3 = encode-do-local @foo.%y(%0) -> %2;
    return %2;
}

timeline $event0 @time(%e : $event0) {
    return %e;
}

extras {
    @bar {
        value : @foo,
        input_slots : {
            %blob : slot_info()
        },
        output_slots : {
            %blob : slot_info()
        },
        input_fences : {},
        output_fences : {},
        input_buffers : {},
        output_buffers : {},
        in_timeline_tag : timeline_tag input @time.%e,
        out_timeline_tag : timeline_tag input @time.%e,
    },
}

pipeline "main" = @bar;