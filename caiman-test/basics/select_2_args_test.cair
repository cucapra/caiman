version 0.0.2


// Test fails when 0 or 2+ arguments are passed to the left and right
// funclets

ffi i64;
event %event0;
buffer_space %buffspace;
native_value %i64n : i64;

function @main() -> i64;

value[impl default @main] %foo() -> [%out: i64] {
    %x = constant %i64n 0;
    %y = constant %i64n 1;
    %z = constant %i64n 2;
    %r = select %x %y %z;
    return %r;
}

timeline %time(%e : %event0) -> %event0 {
    return %e;
}

spatial %space(%bs : %buffspace) -> %buffspace {
    return %bs;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
    %foo_main<$time-usable, $time-usable>() ->
    [%out : $val.%out-usable $space-usable $time-usable %i64n] 
{
    %x_loc = alloc-temporary local [] i64;
    local-do-builtin $val.%x() -> %x_loc;
    %x_val = read-ref i64 %x_loc;

    %y_loc = alloc-temporary local [] i64;
    local-do-builtin $val.%x() -> %y_loc;
    %y_val = read-ref i64 %y_loc;

    %djoin = default-join;
    %join = inline-join %foo_ret [] %djoin;

    schedule-select %x_val [%foo_left, %foo_right]
        [$val.%r, $time, $space]
        (%x_val, %y_val) %join;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
%foo_left<$time-usable, $time-usable>
    (%x: $val.%x-usable $space-usable $time-usable %i64n,
    %y: $val.%x-usable $space-usable $time-usable %i64n) ->
    [%out : $val.%y-usable $space-usable $time-usable %i64n] 
{
    %r_loc = alloc-temporary local [] i64;
    local-do-builtin $val.%y() -> %r_loc;
    %r_val = read-ref i64 %r_loc;
    return %r_val;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
%foo_right<$time-usable, $time-usable>
    (%x: $val.%x-usable $space-usable $time-usable %i64n,
    %y: $val.%x-usable $space-usable $time-usable %i64n) ->
    [%out : $val.%z-usable $space-usable $time-usable %i64n] 
{
    %r_loc = alloc-temporary local [] i64;
    local-do-builtin $val.%z() -> %r_loc;
    %r_val = read-ref i64 %r_loc;
    return %r_val;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
%foo_ret<$time-usable, $time-usable>
    (%r_val : $val.%r-usable $space-usable $time-usable %i64n) ->
    [%out : $val.%out-usable $space-usable $time-usable %i64n] 
{
    return %r_val;
}

pipeline "main" = %foo_main;