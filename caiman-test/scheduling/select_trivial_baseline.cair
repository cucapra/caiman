version 0.0.1

types [
    i64,
    slot $slot0 {
        type : i64,
        stage : ready,
        place : local,
    },
    event $event0 {
        place : local
    },
]

value i64 @foo(%0 : i64) {
    %x = constant 0i64;
    %y = constant 1i64;
    %z = constant 2i64;
    %r = select %x %y %z;
    return %r;
}

schedule $slot0 @foo_main(%blob : $slot0) {
    %0 = alloc-temporary-local-i64 @foo.%x;
    %t0 = encode-do-local @foo.%x() -> %0;
    %default = default-join;
    %join = inline-join @foo1 [] %default;
    schedule-select @foo.%x %0 [@foo1, @foo2] [%blob] %0;
}

schedule $slot0 @foo1(%blob : $slot0) {
    %0 = alloc-temporary-local-i64 @foo.%y;
    %t0 = encode-do-local @foo.%y() -> %0;
    return %0;
}

schedule $slot0 @foo2(%blob : $slot0) {
    %0 = alloc-temporary-local-i64 @foo.%z;
    %t0 = encode-do-local @foo.%z() -> %0;
    return %0;
}

timeline $event0 @time(%e : $event0) {
    return %e;
}

extras {
    @foo_main {
        value : @foo,
        input_slots : {
            %blob : slot_info()
        },
        output_slots : {
            %blob : slot_info()
        },
        input_fences : {},
        output_fences : {},
        input_buffers : {},
        output_buffers : {},
        in_timeline_tag : timeline_tag input @time.%e,
        out_timeline_tag : timeline_tag output @time.%e,
    },
    @foo1 {
        value : @foo,
        input_slots : {
            %blob : slot_info()
        },
        output_slots : {
            %blob : slot_info()
        },
        input_fences : {},
        output_fences : {},
        input_buffers : {},
        output_buffers : {},
        in_timeline_tag : timeline_tag input @time.%e,
        out_timeline_tag : timeline_tag output @time.%e,
    },
    @foo2 {
        value : @foo,
        input_slots : {
            %blob : slot_info()
        },
        output_slots : {
            %blob : slot_info()
        },
        input_fences : {},
        output_fences : {},
        input_buffers : {},
        output_buffers : {},
        in_timeline_tag : timeline_tag input @time.%e,
        out_timeline_tag : timeline_tag output @time.%e,
    },
}

pipeline "main" = @foo_main;