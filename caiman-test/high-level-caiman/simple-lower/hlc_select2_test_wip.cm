#version 0.1.0

tmln time(e: Event) -> Event { returns e }
sptl space(bs: BufferSpace) -> BufferSpace { returns bs }


val main() -> i64 {
    b :- true
    one :- 1
    two :- 2
    r :- one if b else two
    returns r
}

fn foo() -> i64 @ node(main.r)-usable 
    impls main, time, space
{
    let b: bool @ node(main.b)-usable = true;
    let one: i64 @ node(main.one)-usable = 1;
    let two: i64 @ node(main.two)-usable = 2;
    var v: i64 @ none(main);
    
    // Need to use serialized-join, but that doesn't work with temporaries
    if @ node(main.r) b {
        v = one;
    } else {
        v = two;
    }
    @in { v: [node(main.r)-usable, none(space)-saved] };
    v
}

pipeline main { foo }