version 0.0.2

type i64;
ref %i64l : i64-local<flags=[]>;
event %event0;
buffer_space %buffspace;
native_value %i64n : i64;

function @main() -> i64;
function @select_fn(i64, i64) -> i64;

value[impl default @main] %foo() -> i64 {
    %y = constant %i64n 1;
    %z = constant %i64n 2;
    %r_t = call @select_fn(%y, %z);
    %r = extract %r_t 0;
    return %r;
}

timeline %time(%e : %event0) -> %event0 {
    return %e;
}

spatial %space(%bs : %buffspace) -> %buffspace {
    return %bs;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
%foo_main<none($time.%e)-usable, none($time.%e)-usable>()
    -> [%out: node($val.%r)-usable none($space.%e)-usable none($time.%e)-usable %i64n]
{
    %y_ref = alloc-temporary local [] i64;
    local-do-builtin node($val.%y)() -> %y_ref;
    %y = read-ref i64 %y_ref;

    %z_ref = alloc-temporary local [] i64;
    local-do-builtin node($val.%z)() -> %z_ref;
    %z = read-ref i64 %z_ref;

    %default = default-join;
    %join = inline-join %foo_ret [] %default;

    schedule-call %sel_main[value node($val.%r_t),
        timeline none($time.%e),
        spatial none($space.%none)](%y, %z) %join;
}

schedule[value $val = %foo, timeline $time = %time, spatial $space = %space]
%foo_ret<none($time.%e)-usable, none($time.%e)-usable>
    (%y : node($val.%r)-usable none($space.%e)-usable none($time.%e)-usable %i64n) ->
    [%out : node($val.%r)-usable none($space.%e)-usable none($time.%e)-usable %i64n]
{
    return %y;
}


// select fn

value[impl default @select_fn] %sel(%a : %i64n, %b: %i64n) -> i64 {
    %x = constant %i64n 0;
    %r = select %x %a %b;
    return %r;
}

schedule[value $val = %sel, timeline $time = %time, spatial $space = %space]
%sel_main<none($time.%e)-usable, none($time.%e)-usable>
    (%a: input($val.%a)-usable none($space.%e)-usable none($time.%e)-usable %i64n,
    %b: input($val.%b)-usable none($space.%e)-usable none($time.%e)-usable %i64n) ->
    [%out : node($val.%r)-usable none($space.%e)-usable none($time.%e)-usable %i64n] 
{
    %x_loc = alloc-temporary local [] i64;
    local-do-builtin node($val.%x)() -> %x_loc;
    %x_val = read-ref i64 %x_loc;

    %djoin = default-join;
    %join = inline-join %sel_ret [] %djoin;

    schedule-select %x_val [%sel_left, %sel_right]
        [value node($val.%r), timeline none($time.%none), spatial none($space.%none)]
        (%a, %b) %join;
}

schedule[value $val = %sel, timeline $time = %time, spatial $space = %space]
%sel_left<none($time.%e)-usable, none($time.%e)-usable>
    (%a: input($val.%a)-usable none($space.%e)-usable none($time.%e)-usable %i64n,
    %b: input($val.%b)-usable none($space.%e)-usable none($time.%e)-usable %i64n) ->
    [%out : input($val.%a)-usable none($space.%e)-save none($time.%e)-usable %i64n] 
{
    return %a;
}

schedule[value $val = %sel, timeline $time = %time, spatial $space = %space]
%sel_right<none($time.%e)-usable, none($time.%e)-usable>
    (%a: input($val.%a)-usable none($space.%e)-usable none($time.%e)-usable %i64n,
    %b: input($val.%b)-usable none($space.%e)-usable none($time.%e)-usable %i64n) ->
    [%out : input($val.%b)-usable none($space.%e)-save none($time.%e)-usable %i64n] 
{
    return %b;
}

schedule[value $val = %sel, timeline $time = %time, spatial $space = %space]
%sel_ret<none($time.%e)-usable, none($time.%e)-usable>
    (%r : node($val.%r)-usable none($space.%e)-save none($time.%e)-usable %i64n) ->
    [%out : node($val.%r)-usable none($space.%e)-usable none($time.%e)-usable %i64n] 
{
    return %r;
}

pipeline "main" = %foo_main;