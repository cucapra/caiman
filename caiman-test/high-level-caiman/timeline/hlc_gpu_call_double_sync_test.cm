#version 0.1.0

// Call a function and pass it an encoder to submit and synchronize on and
// a fence to synchronize on

extern(gpu) simple(x : i32) -> out: i32
{
    path : "gpu_external.comp",
    entry : "main",
    dimensions : 3,
    in {
        group : 0,
        binding : 0,
        input : x
    },
    out {
        group : 0,
        binding : 1,
        output : out
    }
}

val foo(a: i32, b: i32) -> out: i32 {
    x1 :- simple'<1, 1, 1>(a)
    x2 :- simple'<1, 1, 1>(b)
    y2 :- bar(x1, x2)
    returns y2
}

val bar(a : i32, b: i32) -> out: i32 {
    returns a + b
}

tmln bar_time(e: Event, r1: Encoder, f1: Fence) -> out: Event {
    sub :- submit_event(r1)
    snc1 :- sync_event(e, sub)
    snc2 :- sync_event(snc1, f1)
    returns snc2
}

tmln foo_time(e: Event) -> out: Event {
    loc, rem :- encode_event(e)
    sub :- submit_event(rem)
    loc2, rem2 :- encode_event(loc, sub)
    ret :- bar_time(loc2, rem2, sub)
    returns ret
}

sptl space(bs: BufferSpace) -> BufferSpace {
    returns bs
}


fn foo_impl(a: &i32 @ node(tmln.ret), b: &i32 @ node(tmln.ret)) -> i32 impls foo_time, foo, space {
    @in { input: input(tmln.e), output: node(tmln.out) };
    let e = encode-begin @ node(tmln.(loc, rem)) { x_gpu, y_gpu } gpu;
    encode e.copy[x_gpu <- a];
    encode e.call[y_gpu <- simple'<1, 1, 1>(x_gpu)];
    let f = submit @ node(tmln.sub) e;

    let e2 = encode-begin @ node(tmln.(loc2, rem2)) {x2_gpu, y2_gpu } gpu;
    encode e2.copy[x2_gpu <- b];
    encode e2.call[y2_gpu <- simple'<1, 1, 1>(x2_gpu)];
    let r = bar_impl(e2, f, y_gpu, y2_gpu) @ node(tmln.ret);
    @in {input: node(tmln.ret), output: node(tmln.out) };
    @out {input: node(tmln.out), output: node(tmln.out) };
    r
}

fn bar_impl(e: Encoder @ input(tmln.r1),
            f: Fence @ [input(tmln.f1), none(val)], 
            xf: i32'<storage, map_read> @ [input(tmln.f1), none(sptl)-saved],
            xe: i32'<storage, map_read> @ [input(tmln.r1), none(sptl)-saved]) -> i32 
            impls bar_time, bar, space 
{
    @in { input: input(tmln.e), output: node(tmln.out) };
    let f2 = submit @ node(tmln.sub) e;
    let ye = (await @ node(tmln.snc1) f2).xe_0;
    // TODO: we rename nodes normally, but currently aren't doing
    // that for timeline stuff. Hence the `x_0` to "manually" rename
    let yf = (await @ node(tmln.snc2) f).xf_0;
    @out { input: node(tmln.out), output: node(tmln.out) };
    yf + ye
}

pipeline main { foo_impl }