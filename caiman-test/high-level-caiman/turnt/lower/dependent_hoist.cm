extern(cpu) pure foo() -> i32

val value(a: i32) -> i32 {
    t :- 2
    h :- foo()
    x :- t + h
    z :- t + x
    // note if `0 - x` didn't depend on `t`, then nothing would be hoisted
    // since hoisting `z` to this position would require temporarily making things
    // worse as we'd go from sharing `t` to needing to calculate `t`.
    y :- 0 - x if 0 > a else x
    returns y + z + t

}

