#version 0.1.0

tmln time(e: Event) -> Event { returns e }
sptl space(s: BufferSpace) -> BufferSpace { returns s }

val main() -> i64 {
    c :- 1
    r :- id(c)
    x :- c + r
    returns x
}

val id(a: i64) -> i64 {
    returns a
}

fn main_func() -> i64 @ node(main.x)-usable impls main, time, space  {
    let c: i64 @ node(main.c)-usable = 1;
    let c2: i64 @ node(main.c)-save = 1;
    let r: i64 @ node(main.r)-usable = id_func(c) @ node(main.r);
    @in { c2: node(main.c)-usable };
    let x: i64 @ node(main.x)-usable = c2 + r;
    return x;
}

fn id_func(a: i64 @ input(id.a)-usable) -> i64 @ output(id.a)-usable  
    impls id, time, space
{
    return a;
}

pipeline main { main_func }