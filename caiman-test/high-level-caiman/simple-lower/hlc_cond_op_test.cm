#version 0.1.0

tmln time(e: Event) -> Event { returns e }
sptl space(s: BufferSpace) -> BufferSpace { returns s }

val main() -> i64 {
    returns r
    plus :- a + a

    c :- false
    a :- 5
    
    mul :- a * a

    r :- plus if c else mul
}

fn main_impl() -> i64 @ node(main.r)-usable impls main, time, space  {
    let a: i64 @ node(main.a) = 5;
    let c: bool @ node(main.c) = false;

    let r: i64 @ node(main.r) = if @ node(main.r) c {
        let sum: i64 @ node(main.plus) = a + a;
        sum
    } else {
        let diff: i64 @ node(main.mul) = a * a;
        diff
    };
    @in {r: node(main.r)-usable };
    r
}

pipeline main { main_impl }